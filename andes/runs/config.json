      // no vegetation terrain 
      "5": {
        "canopyType": "1",
        "is_water": "false",
        "LAI": "0",
        "CanopyHeight": "0"
      },
      // rocky terrain
      "6": {
        "canopyType": "1",
        "is_water": "false",
        "LAI": "0",
        "CanopyHeight": "0"
      },
